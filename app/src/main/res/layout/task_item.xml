<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    >

    <ImageView
        android:id="@+id/taskPV"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:background="@color/MEDIUM_PRIORITY"
        android:src="@drawable/baseline_checklist_24"
        />

    <TextView
        android:id="@+id/taskTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/taskPV"
        app:layout_constraintBottom_toTopOf="@+id/timeTV"
        android:layout_marginStart="16dp"
        android:text="TITLE PLACEHOLDER"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START - END HRS"
        app:layout_constraintTop_toBottomOf="@+id/taskTitleTV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/taskPV"
        android:layout_marginStart="16dp"/>

    <ImageView
        android:id="@+id/editPV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/deletePV"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/MEDIUM_PRIORITY"
        android:src="@drawable/baseline_edit_24"
        />

    <ImageView
        android:id="@+id/deletePV"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/editPV"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="16dp"
        android:background="@color/MEDIUM_PRIORITY"
        android:src="@drawable/baseline_delete_24"
        />



</androidx.constraintlayout.widget.ConstraintLayout>