<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.TasksFragment"
    android:orientation="vertical"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/dateTaskTVshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MARCH 29. 2023."
        style="@style/MonthDisplay"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/timer_show"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableStart="@drawable/baseline_access_time_filled_24"
            android:drawablePadding="10dp"
            android:textColor="@color/eva_green"
            android:textSize="20sp"
            android:gravity="left|center"
            android:background="@drawable/search_bar"
            android:text="10:10 - 10:20"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />

        <EditText
            android:id="@+id/prior_view"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:background="@drawable/search_bar"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="PRIOR"
            android:textColor="@color/eva_green"
            android:textSize="20sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/title_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Task title"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/MonthDisplay"
        />

    <TextView
        android:id="@+id/description_show"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Description"
        android:gravity="top"
        android:background="@drawable/search_bar"
        android:drawablePadding="10dp"
        android:textColor="@color/eva_green"
        android:textSize="20sp"
        android:paddingLeft="30dp"
        android:paddingTop="30dp"
        />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <Button
            android:id="@+id/editBtn_show"

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/eva_green"
            android:text="@string/edit"
            android:textColor="@color/eva_purple"

            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/delete_btn_show"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/delete"
            android:backgroundTint="@color/eva_purple"
            android:textColor="@color/eva_green"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</LinearLayout>