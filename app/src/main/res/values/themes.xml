<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Raf_Dnevnjak" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ErrorMissingLogin" parent="Theme.Raf_Dnevnjak">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/design_default_color_error</item>
    </style>

    <style name="UserInfo" parent="Theme.Raf_Dnevnjak">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#52d053</item>
    </style>

    <style name="MonthDisplay" parent="Theme.Raf_Dnevnjak">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#52d053</item>
    </style>
    <style name="CalendarItem" parent="Theme.Raf_Dnevnjak">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DayDisplay" parent="Theme.Raf_Dnevnjak">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#52d053</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="autoCompleteTextViewStyle">@style/Widget.MyApp.AutoCompleteTextView.SearchView</item>
    </style>

    <style name="Widget.MyApp.AutoCompleteTextView.SearchView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/eva_green</item>
        <item name="android:textColorHint">@color/eva_green</item>
    </style>

    <style name="priority" parent="Theme.Raf_Dnevnjak">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>